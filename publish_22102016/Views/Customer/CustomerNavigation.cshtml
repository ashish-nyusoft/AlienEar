            }
            @if (!Model.HideChangePassword)
            { 
                <li class="@T("Account.ChangePassword") @if (Model.SelectedTab == CustomerNavigationEnum.ChangePassword)
                                                                             {<text>active</text>}
                                                                             else
                                                                             {<text>inactive</text>}"><a href="@Url.RouteUrl("CustomerChangePassword")" >@T("Account.ChangePassword")</a></li>
            }
            @if (!Model.HideAvatar)
            { 
                <li class="@T("Account.Avatar") @if (Model.SelectedTab == CustomerNavigationEnum.Avatar)
                                                                     {<text>active</text>}
                                                                     else
                                                                     {<text>inactive</text>}"><a href="@Url.RouteUrl("CustomerAvatar")" >@T("Account.Avatar")</a></li> 
            }
            @if (!Model.HideForumSubscriptions)
            { 
                <li class="@T("Account.ForumSubscriptions")  @if (Model.SelectedTab == CustomerNavigationEnum.ForumSubscriptions)
                                                                                 {<text>active</text>}
                                                                                 else
                                                                                 {<text>inactive</text>}"><a href="@Url.RouteUrl("CustomerForumSubscriptions")" >@T("Account.ForumSubscriptions")</a></li>
            }
            @Html.Widget("account_navigation_after")
        </ul>
    </div>
</div>
